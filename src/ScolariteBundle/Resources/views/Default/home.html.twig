{% extends 'front.html.twig' %}

{% block body %}
{#<html>#}
    {#<head>#}
        {#<h2 align="center">Welcome page : <small> A mettre page d'accueil du Front</small></h2>#}
    {#</head>#}
    {#<body>#}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="profile_pic" align="center">
        {% if app.user.imageUser is empty %}
            <img src="{{ asset('images/users/user.png') }}" alt="User" class="img-circle profile_img">
        {% else %}
            <img src="{{ asset('images/users/') }}{{ app.user.imageUser }}" alt="" class="img-circle profile_img">
        {% endif %}
            </div>
        <div class="profile_info">
            <h4 align="center">Bienvenue,</h4>
            <h2 align="center">{{ app.user.username }}</h2>
            <h4 align="center">
            <a href="{{ path('sante_homepage') }}">Connexion Administration</a>
            </h4>
        </div>

    {% else %}
        <div class="profile_pic" align="center">
            <img src="{{ asset('images/logo/icon1.jpg') }}" alt="" height="20" class="img-circle profile_img">
        </div>
            <h3 align="center">Veuillez vous connecter,</h3>
            <h4 align="center">
                <a href="{{ path('fos_user_security_login') }}" align="center">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            </h4>
    {% endif %}

    {#</div>#}
    {#</body>#}
    {#<div align="center">#}
        {#<img  src="{{ asset('images/logo/Logo1.png') }} "  height="350">#}
    {#</div>#}
{#</html>#}

{% endblock body %}