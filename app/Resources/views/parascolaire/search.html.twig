{% extends "dashboard.html.twig" %}

{% block body %}

    <div class="x_panel">
        <div class="x_title">
            <h2>Parascolaires
                <small>recherche</small>
            </h2>
            <ul class="nav navbar-right ">
                <li>
                    <a href="{{ path('parascolaire_new') }}">Ajouter un parascolaire</a>
                </li>
            </ul>
            <div align="center">
                <form action="search" method="post">
                    {{ form_start(form) }}
                    {{ form_widget(form.type, {
                        'attr': {'class':'dropdown-toggle'}
                    }) }}
                    {{ form_widget(form.matiere, {
                        'attr': {'class':'dropdown-toggle'}
                    }) }}
                    <input class="btn btn-primary" type="submit" value="Rechercher"/>
                    {{ form_end(form) }}
                </form>
            </div>

            <div class="clearfix"></div>

        </div>

        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th></th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Fichier</th>
                    <th>Type</th>
                    <th>Matière</th>
                    <th>Date d'ajoût</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for parascolaire in Parascolaires %}
                    <tr>
                        <td align="center">
                            <a href="{{ path('parascolaire_show', { 'id': parascolaire.id }) }}"><i class="fa fa-eye"></i></a>
                        </td>
                        <td>{{ parascolaire.titre }}</td>
                        <td>{{ parascolaire.description }}</td>
                        <td align="center">
                            <a href="{{ asset('images/parascolaires/') }}{{ parascolaire.fileName }}"><i class="fa fa-download"></i></a>
                        </td>                        <td>{{ parascolaire.typePara }}</td>
                        <td>{{ parascolaire.matiere }}</td>
                        <td>{% if parascolaire.dateAjout %}{{ parascolaire.dateAjout|date('Y-m-d') }}{% endif %}</td>
                        <td>
                            <a href="{{ path('parascolaire_edit', { 'id': parascolaire.id }) }}">
                                <i class="fa fa-edit"></i><i class="fa fa-trash"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
