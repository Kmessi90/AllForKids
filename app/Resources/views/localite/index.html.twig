{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="title_left">
        <h1 align="center">Gestion des Localités</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Liste des Localités</u> : <small>Détails</small></h2>

                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('localite_new') }}"><i class="fa fa-save"></i> Créer Localité</a>
                </ul>
            </div>
            {#Filtre recherche par Gouvernorat#}
<div align="center">
            <form action="search" method="POST">
                {{ form_start(form) }}
                {{ form_widget(form.gouvernorat, {
                    'attr': {'class':'dropdown-toggle'}
                }) }}
                <input class="btn btn-primary" type="submit" value="Rechercher"/>
                {{ form_end(form) }}
            </form>
</div>
        </div>
        <div align="left">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle Localité</th>
                    <th>Code Postal</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for localite in localites %}
                        <tr>
                            <td><a href="{{ path('localite_show', { 'idLocalite': localite.idLocalite }) }}"><i class="fa fa-eye"></i> <u>{{ localite.idLocalite }}</u></a></td>
                            <td>{{ localite.libelleLocalite  }}</td>
                            <td>{{ localite.codePostal  }}</td>
                            <td>
                                <a href="{{ path('localite_edit', { 'idLocalite': localite.idLocalite }) }}">
                                    <i class="fa fa-edit"></i> Modifier /<i class="fa fa-trash"></i> Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
