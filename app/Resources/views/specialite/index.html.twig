{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="title_left">
        <h1 align="center">Gestion des Spécialités</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Liste des Spécialités</u> : <small>Détails</small></h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('specialite_new') }}"><i class="fa fa-save"></i> Créer Spécialité</a>
                </ul>
            </div>
        </div>
        <div align="left">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Libellé Spécialité</th>
                    <th>Description Spécialité</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for specialite in specialites %}
                <tr>
                    <td><a href="{{ path('specialite_show', { 'idSpecial': specialite.idSpecial }) }}"><i class="fa fa-eye"></i> <u>{{ specialite.idSpecial }}</u></a></td>
                    <td>{{ specialite.libelleSpecial }}</td>
                    <td>{{ specialite.descriptionSpecial }}</td>
                    <td>
                        <a href="{{ path('specialite_edit', { 'idSpecial': specialite.idSpecial }) }}">
                            <i class="fa fa-edit"></i> Modifier /<i class="fa fa-trash"></i> Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
{% endblock %}