{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="title_left">
        <h1 align="center">Gestion des Spécialités</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Création nouvelle spécialité</u> : <small>Ajout</small></h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('specialite_index') }}"><i class="fa fa-reply"></i> Retour à la liste</a>
                </ul>
            </div>
        </div>

        <div class="x_content dashboard_graph">
            <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.libelleSpecial, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.libelleSpecial, {
                                'attr': {'class': 'form-control col-md-7 col-xs-12'}
                            }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.descriptionSpecial, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.descriptionSpecial, {
                                'attr': {'class': 'form-control col-md-7 col-xs-12'}
                            }) }}
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3" align="center">
                            <input class="btn btn-primary" type="submit" value="Créer"/>
                            <a href="{{ path('specialite_index') }}" class="btn btn-warning" role="button" >Annuler</a>
                            </div>
                        </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
