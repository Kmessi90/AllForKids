{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="title_left">
        <h1 align="center">Gestion des Catégories Professionnels</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Liste des Catégories</u> : <small>Détails</small></h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('categorieprofessionnel_new') }}"><i class="fa fa-save"></i> Créer nouvelle Catégorie</a>
                </ul>
            </div>
        </div>
        <div align="left">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Libellé</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for categorieProfessionnel in categorieProfessionnels %}
                <tr>
                    <td><a href="{{ path('categorieprofessionnel_show', { 'idCateg': categorieProfessionnel.idCateg }) }}"><i class="fa fa-eye"></i> <u>{{ categorieProfessionnel.idCateg }}</u></a></td>
                    <td>{{ categorieProfessionnel.libelleCateg }}</td>
                    <td>
                        <a href="{{ path('categorieprofessionnel_edit', { 'idCateg': categorieProfessionnel.idCateg }) }}">
                            <i class="fa fa-edit"></i> Modifier /<i class="fa fa-trash"></i> Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
{% endblock %}