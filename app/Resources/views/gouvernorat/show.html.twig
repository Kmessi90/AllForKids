{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="title_left">
        <h1 align="center">Gestion des Gouvernorats</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Affichage gouvernorat</u> : {{ gouvernorat.idGouvernorat }}</h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('gouvernorat_index') }}"><i class="fa fa-reply"></i> Retour à la liste</a></br>
                    <a href="{{ path('gouvernorat_edit',{ 'idGouvernorat': gouvernorat.idGouvernorat }) }}"><i class="fa fa-edit"></i> Modifier</a></br>
                </ul>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Libelle Gouvernorat :</th>
                        <td>{{ gouvernorat.libelleGouvernorat }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="x_panel" align="auto">
        <div align="left">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
        <div class="x_content">
            <h2 align="center">Liste des localités dans ce Gouvernorat</h2>
            <span class="label label-success pull-right">En cours de développement</span>
        </div>
    </div>

{% endblock %}
