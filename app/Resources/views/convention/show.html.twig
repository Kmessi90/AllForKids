{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="title_left">
        <h1 align="center">Gestion des Conventions</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Affichage convention</u> : {{ convention.idConv }}</h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('convention_index') }}"><i class="fa fa-reply"></i> Retour à la liste</a></br>
                    <a href="{{ path('convention_edit',{ 'idConv': convention.idConv }) }}"><i class="fa fa-edit"></i> Modifier</a></br>
                </ul>
            </div>
        </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Libelle :</th>
                <td>{{ convention.libelleConv }}</td>
            </tr>
            <tr>
                <th>Description :</th>
                <td>{{ convention.descriptConv }}</td>
            </tr>
            <tr>
                <th>Observation : </th>
                <td>{{ convention.ObservConv }}</td>
            </tr>
            <tr>
                <th>Logo :</th>
                <td><img src="{{ asset('images/convention/') }}{{ convention.imagecv }}"  height="50"></td>
            </tr>
            <tr>
                <th>Date Mise à jour :</th>
                <td>{% if convention.updatedAt %}{{ convention.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="x_panel" align="auto">
    <div align="left">
        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
    </div>
    <div class="x_content">
        <h2 align="center">Liste des professionnels adhérés à cette convention.</h2>
        <span class="label label-success pull-right">En cours de développement</span>
    </div>
</div>

{% endblock %}
